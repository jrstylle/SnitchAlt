{
    "name": "Snitchalt",
    "description": "The Snitchalt is an extension of Google Chrome that finds images without alt and empty alt images",
    "version": "1.0.0",
    "author": "Jos√© Rodrigues",
    "homepage_url": "https://www.linkedin.com/in/jrstylle/",
    "manifest_version": 2,
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },

    "permissions": [
        "activeTab",
        "tabs",
        "storage"
    ],
    "browser_action": {
      "default_title": "Snitchalt",
      "default_icon": "icons/icon128.png",
      "default_popup": "popup/popup.html"
    } ,
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "css": [
            "content/content.css"
          ]
        }
      ]   
}